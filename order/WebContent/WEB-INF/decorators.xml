<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/40*.jsp</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/scripts/dojo/*</pattern>
        <pattern>/struts/dojo/*</pattern> 
        <pattern>/resources/*</pattern>
        <pattern>/main/*</pattern>
        <pattern>/menu/*</pattern>
        <pattern>/common/*</pattern>
        <pattern>/admin/jxtmenu_list.action</pattern>
        <pattern>/index.action</pattern>
        <pattern>/config-browser/*</pattern>
        <pattern>/login/login.action</pattern>
        <pattern>/login/*</pattern>
        
    </excludes> 
    <decorator name="default" page="default.jsp">
        <pattern>/*.action</pattern>
    </decorator>
</decorators>
